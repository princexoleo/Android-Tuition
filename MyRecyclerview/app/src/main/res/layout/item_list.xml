<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardMaxElevation="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        >

        <ImageView
            android:id="@+id/user_pro_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/images"
            tools:srcCompat="@tools:sample/avatars[7]" />
        <TextView
            android:id="@+id/username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/user_pro_imageview"/>

        <ImageView
            android:id="@+id/body_imageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/user_pro_imageview"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/backgrounds/scenic[8]" />

        <Button
            android:id="@+id/button"
            android:layout_below="@+id/body_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>